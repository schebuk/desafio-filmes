    ],
    "require": {
        "php": ">=7.4.13",
        "brunoconte3/dev-utils": "1.12.1"
    },
    "autoload": {
       "psr-4": {
           "Resources\\": "resources/",
           "Src\\": "src/"
       }
    },
    "scripts": {
        "apagar-pastas-teste": [
            "find ./vendor -name 'test' -type d -exec rm -rf '{}' +",
            "find ./vendor -name 'tests' -type d -exec rm -rf '{}' +",
            "find ./vendor -name 'Test' -type d -exec rm -rf '{}' +",
            "find ./vendor -name 'Tests' -type d -exec rm -rf '{}' +",
            "find ./vendor -name 'bin' -type d -exec rm -rf '{}' +"
        ],
        "post-update-cmd": [
            "@apagar-pastas-teste"
        ],
        "post-install-cmd": [
            "@apagar-pastas-teste"
        ]
    }
}
